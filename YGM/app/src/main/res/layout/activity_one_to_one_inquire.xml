<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyMenu.Inquiry.OneToOneInquireActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="문의 유형"
                android:textColor="#000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/textbox">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_onetoone_inquire_type"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatSpinner>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="작성자"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_name_onetoone_inquire"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textbox"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="휴대전화"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_phone_onetoone_inquire"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textbox"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="이메일"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_email_onetoone_inquire"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textbox"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="TextView"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="내용"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText_title_onetotone_inquire"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textbox"
                android:gravity="center_vertical"
                android:hint="제목을 입력해주세요."
                android:inputType="text"
                android:paddingLeft="8dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText_body_onetotone_inquire"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_margin="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textbox"
                android:gravity="top|left"
                android:hint="내용을 입력해주세요."
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_cancel_onetoone_inquire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#E2E2E2"
                    android:text="취소"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_register_onetoone_inquire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:text="작성하기"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>